<registry>

    <records interface="Products.CMFPlone.interfaces.controlpanel.ISearchSchema"
             prefix="plone">
        <value key="types_not_searched" purge="false">
            <element>ftw.collectionblock.CollectionBlock</element>
        </value>
    </records>

    <records prefix="plone.resources/ftw-collectionblock-js"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="js">++resource++ftw.collectionblock/collectionblock.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.bundles/ftw-collectionblock-resources"
             interface='Products.CMFPlone.interfaces.IBundleRegistry'>
        <value key="resources">
            <element>ftw-collectionblock-js</element>
        </value>
        <value key="enabled">True</value>
        <value key="depends">plone-legacy</value>
        <value key="compile">False</value>
        <value key="jscompilation">++plone++collectionblock/ftw-collectionblock-compiled.js</value>
        <value key="merge_with">default</value>
    </records>

</registry>
